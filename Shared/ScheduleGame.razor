<div class="col-3 teampick" aria-dropeffect="">
    <input type="radio" id="@ID" location="@location" name=@game class="position-absolute" />
    <label for="@ID" class="btn">
        <img src="@teamNameImgSrc" class="teamnameimg" alt="@ID" />
        <img src=@logoImgSrc class="teamlogo" alt="@ID"/>
        <div class="record"><strong>(@wins-@losses)</strong></div>
    </label>
    <div class="teampickbox col-12"></div>
</div>

